---
apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: csi-nfs-ephemeral
provisioner: nfs.csi.k8s.io
parameters:
  server: "{{ nfs_server }}"
  share: "{{ nfs_ephemeral_share }}"
reclaimPolicy: Delete
volumeBindingMode: Immediate
mountOptions:
  - nfsvers=4.1

---
apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: csi-nfs-retained
provisioner: nfs.csi.k8s.io
parameters:
  server: "{{ nfs_server }}"
  share: "{{ nfs_retained_share }}"
reclaimPolicy: Retain
volumeBindingMode: Immediate
mountOptions:
  - nfsvers=4.1
